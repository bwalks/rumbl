<h1>Listing Users</h1>

<table>
    <%= for user <- @users do %>
        <tr>
            <td><b><%= first_name(user) %></b> (<%= user.id %>)</td>
            <td><%= link "View", to: Routes.user_path(@conn, :show, user.id) %></td>
             <td><%= link "Delete", to: Routes.user_path(@conn, :delete, user.id), method: :delete %></td>
        </tr>
    <% end %>
</table>

<%= link "New User", to: Routes.user_path(@conn, :new) %>